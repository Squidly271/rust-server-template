      <Mode/>
    </Variable>
    <Variable>
      <Value>0</Value>
      <Name>OXIDE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>1</Value>
      <Name>PERFORMANCE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>public</Value>
      <Name>RELEASE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Server name</Value>
      <Name>NAME</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>DESCRIPTION</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>BANNER</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PLAYERS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>medium</Value>
      <Name>MAPSIZE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>changeme</Value>
      <Name>RUST_RCON_PASSWORD</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>ARGUMENTS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>0</Value>
      <Name>PVE</Name>
